<div class="ui four stackable cards">
<% flashcards.each do |flashcard| %>
<div class="green ui fluid card">
  <div class="content">
    <a class="header"><%= flashcard.name %></a>
    <div class="meta">
      <span class="date"><%= time_ago_in_words(flashcard.created_at) %></span>
    </div>
    <div class="description">
     <%= markdown(flashcard.description) %>
    </div>
  </div>
  <div class="extra content"> 
     <%= flashcard.user.email %>
  <span class="right floated">
    <div id="likes_<%= flashcard.id %>">
  <%= render 'likes', flashcard: flashcard %>
  </div>
  </span>
  </div>
</div>
<% end %>
</div>
