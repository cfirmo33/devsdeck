<div class="ui two stackable cards">
  <% flashcards.each do |flashcard| %>
  <div class="green ui fluid card">
    <div class="content">
      <%= link_to flashcard.name, flashcard_path(flashcard), class: 'header'%>
      <div class="meta">
        <span class="date"><%= time_ago_in_words(flashcard.updated_at) %></span>
      </div>
      <div class="description">
       <%= markdown(flashcard.description) %>
     </div>
   </div>
   <% if current_user %>
   <div class="extra content">
     By <%= flashcard.user.email %>
     <span class="right floated">
      <div id="likes_<%= flashcard.id %>">
        <%= render 'likes', flashcard: flashcard %>
      </div>
    </span>
  </div>
  <% end %>
</div>
<% end %>
</div>
