<% if current_user %>
<%= link_to card_like_path(card), method: :patch, remote: true do %>
  <% if current_user.voted_for? card %>
    <i class="heart red like icon"></i>
  <% else %>
    <i class="heart outline like icon"></i>
  <% end%>
<% end %>
<% else %>
  <i class="heart outline like icon"></i>
<% end %>
<%= card.cached_votes_total %>
