<div class="card">

    <div class="image">
      <%= image_tag(avatar_url(@user)) %>
    </div>
    <div class="content">
      <div class="header">
        <%= @user.email %>
      </div>
      <div class="description">
        <%= @user.description %>
      </div>
    </div>
    <div class="extra content center aligned">
      <span>
        <%= link_to edit_user_path(@user) do %>
          <i class="edit icon"></i>
          Edit Profile
        <% end %>
      </span>
    </div>
    <div class="extra content center aligned">
      <%= render 'statistic', total: @total_cards, label: 'Cards'%>
      <%= render 'statistic', total: @total_likes, label: 'Likes'%>
   </div>
    </div>
