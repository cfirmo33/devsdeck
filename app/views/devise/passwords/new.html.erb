<div class="ui three column doubling stackable grid container ">
  <div class="column"></div>
  <div class="column">
    <h4>Forgot your password?</h4>
  <%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f| %>

    <%= render 'layouts/messages' %>
    <div class="ui">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, placeholder: 'Your email address' %>
        </div>
      </div>
      <%= f.button "Send me reset password instructions", class: 'ui fluid submit button', data: { disable_with: '<i class="spinner icon"></i> Sending...'}%>
    </div>
    <% end %>
    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="column"></div>
